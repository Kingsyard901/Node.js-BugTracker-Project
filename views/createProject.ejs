<%- include("partials/header"); -%>

<div class="row">
    <div class="col-md-6">
        <form class="" action="/project" method="post">
            <div class="form-group">
                <div>
                    <h3>
                        Create New Project
                    </h3>
                    <hr>
                </div>
                <label for="ticketSystem"><i class="far fa-window-restore"></i> System / Web App</label>
                <input type="text" class="form-control" name="ticketSystem"
                    placeholder="Enter a project/Software/Site name...">
                <label for="ticketDate"><i class="far fa-calendar-check"></i> Created Date</label>
                <input type="date" class="form-control" name="ticketDate">
                <label for="ticketEndDate"><i class="far fa-calendar-check"></i> Project End Date (End of life)</label>
                <input type="date" class="form-control" name="ticketEndDate">

                <label for="ticketMessage"><i class="far fa-edit"></i> Project Description</label>
                <textarea class="form-control" name="ticketMessage" rows="3"
                    placeholder="Describe the project and important information."></textarea>


            </div>
        </form>
    </div>
    <div class="col-md-4">
        <form class="" action="/create" method="post">
            <div class="form-group">
                <div>
                    <h3>
                        Customer Information
                    </h3>
                    <hr>
                </div>
                <label for="ticketTitle"><i class="fas fa-user-ninja"></i> Company</label>
                <input type="text" class="form-control" name="SystemDev"
                    placeholder="CHANGE TO DROP-DOWN FROM CUSTOMERS.">
                <label for="ticketSystem"><i class="fas fa-users-cog"></i> Contact Person</label>
                <input type="text" class="form-control" name="SystemOwner" placeholder="Enter Full name...">
                <label for="contactEmail"><i class="far fa-envelope"></i> Contact Email</label>
                <input type="email" class="form-control" name="contactEmail"
                    placeholder="Contact person's Email adress.">
                <label for="hourlyRate"><i class="fas fa-euro-sign"></i> Hourly Debit Rate</label>
                <input type="text" class="form-control" name="hourlyRate" placeholder="Hourly Rate that we debit.">
            </div>
        </form>
    </div>
    <div class="col-md-2">
        <form class="" action="/create" method="post">
            <div class="form-group">
                <div>
                    <h3>
                        Actions
                    </h3>
                    <hr>
                </div>
                <label for="button"><i class="far fa-share-square"></i> Save project</label>
                <button class="btn btn-primary header-margin-bottom" type="submit" name="button"><i
                        class="far fa-share-square"></i> Activate Project</button>
            </div>
        </form>
    </div>
</div>